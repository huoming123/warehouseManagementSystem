<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.warehouseManagementSystem.mapper.DeliveryMapper">

    <resultMap type="com.design.warehouseManagementSystem.pojo.Delivery" id="DeliveryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="deliveryNo" column="delivery_no" jdbcType="VARCHAR"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="warehousemanId" column="warehouseman_id" jdbcType="INTEGER"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DeliveryMap">
        select
          id, delivery_no, product_name, total, created_at, created_by, warehouseman_id, reason
        from delivery
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="increased" keyProperty="id" useGeneratedKeys="true">
        insert into delivery(delivery_no, product_name, total, created_at, created_by, warehouseman_id, reason)
        values (#{deliveryNo}, #{productName}, #{total}, now(), #{createdBy}, #{warehousemanId}, #{reason})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageSearchByCondition" resultMap="DeliveryMap">
        select *  from delivery  where created_at is not null
          <if test="page.key.productName != null and page.key.productName != ''">
              and  product_name like '%' #{page.key.productName}  '%'
          </if>
          <if test="page.key.deliveryNo != null and page.key.deliveryNo != ''">
              and  delivery_no like '%' #{page.key.deliveryNo}  '%'
          </if>
            <!--排序 desc是降序-->
        order by
        id desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageSearchCount" resultType="int">
        select count(id) as count from delivery   where created_at is not null
        <if test="page.key.productName != null and page.key.productName != ''">
            and  product_name like '%' #{page.key.productName}  '%'
        </if>
        <if test="page.key.deliveryNo != null and page.key.deliveryNo != ''">
            and  delivery_no like '%' #{page.key.deliveryNo}  '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="edit">
        update delivery
        <set>
            <if test="deliveryNo != null and deliveryNo != ''">
                delivery_no = #{deliveryNo},
            </if>
            <if test="productName != null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="warehousemanId != null">
                warehouseman_id = #{warehousemanId},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from delivery where id = #{id}
    </delete>
     <select id="getDeliveryList" resultMap="DeliveryMap">
         select * from delivery where product_name =#{productName};
     </select>
    <select id="getByDeliveryNo" resultMap="DeliveryMap">
         select * from delivery where delivery_no =#{deliveryNo};
     </select>
    <!--根据物品统计出库数量-->
    <select id="getDeliveryAnalyse" resultMap="DeliveryMap">
        select product_name, sum(total) as count from delivery  where created_at is not null
        group by product_name
    </select>
</mapper>

