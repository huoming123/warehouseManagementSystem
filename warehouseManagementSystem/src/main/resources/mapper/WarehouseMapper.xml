<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.warehouseManagementSystem.mapper.WarehouseMapper">

    <resultMap type="com.design.warehouseManagementSystem.pojo.Warehouse" id="WarehouseMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="warehouseNo" column="warehouse_no" jdbcType="VARCHAR"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="supplier" column="supplier" jdbcType="VARCHAR"/>
        <result property="warehousemanId" column="warehouseman_id" jdbcType="INTEGER"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WarehouseMap">
        select
          id, warehouse_no, product_name, total, created_at, created_by, supplier, warehouseman_id, reason
        from warehouse
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="increased" keyProperty="id" useGeneratedKeys="true">
        insert into warehouse(warehouse_no, product_name, total, created_at, created_by, supplier, warehouseman_id, reason)
        values (#{warehouseNo}, #{productName}, #{total}, now(), #{createdBy}, #{supplier}, #{warehousemanId}, #{reason})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageSearchByCondition" resultMap="WarehouseMap">

        select *  from warehouse where created_at is not null
          <if test="page.key.productName != null and page.key.productName != ''">
              and  product_name like '%' #{page.key.productName}  '%'
          </if>
          <if test="page.key.warehouseNo != null and page.key.warehouseNo != ''">
              and  warehouse_no like '%' #{page.key.warehouseNo}  '%'
          </if>
            <!--排序 desc是降序-->
        order by
        id desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageSearchCount" resultType="int">
        select count(id) as count from warehouse  where created_at is not null
        <if test="page.key.productName != null and page.key.productName != ''">
            and  product_name like '%' #{page.key.productName}  '%'
        </if>
        <if test="page.key.warehouseNo != null and page.key.warehouseNo != ''">
            and  warehouse_no like '%' #{page.key.warehouseNo}  '%'
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="edit">
        update warehouse
        <set>
            <if test="warehouseNo != null and warehouseNo != ''">
                warehouse_no = #{warehouseNo},
            </if>
            <if test="productName != null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="supplier != null and supplier != ''">
                supplier = #{supplier},
            </if>
            <if test="warehousemanId != null">
                warehouseman_id = #{warehousemanId},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from warehouse where id = #{id}
    </delete>
    <select id="getWarehouseList" resultMap="WarehouseMap">
        select * from warehouse  where product_name =#{productName};
    </select>
    <select id="getByWarehouseNo" resultMap="WarehouseMap">
        select * from warehouse  where warehouse_no =#{warehouseNo};
    </select>
    <!--根据物品统计入库数量-->
    <select id="getWarehouseAnalyse" resultMap="WarehouseMap">
        select product_name, sum(total) as count from warehouse  where created_at is not null
        group by product_name
    </select>
</mapper>

